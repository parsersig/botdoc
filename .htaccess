# Enable URL rewriting
RewriteEngine On
RewriteBase /

# Route all requests to index.php (Telegram webhook endpoint)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ index.php [L]

# Deny direct access to sensitive files (JSON and log files)
<FilesMatch "\.(json|log)$">
    Require all denied
</FilesMatch>
